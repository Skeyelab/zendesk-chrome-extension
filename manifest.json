{
  "manifest_version": 3,
  "name": "Zendesk Sidebar Extension",
  "version": "1.0.0",
  "description": "A sidebar extension to help Zendesk users view ticket information",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.zendesk.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.zendesk.com/*"],
      "js": ["content.js"],
      "css": ["sidebar.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
